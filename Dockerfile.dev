FROM python:3.12-slim-bullseye

# Install build dependencies required for gevent/greenlet and system tools
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential gcc libssl-dev libffi-dev python3-dev python3.12-dev \
    libxml2-dev libxslt-dev zlib1g-dev libjpeg-dev libpq-dev \
    curl ca-certificates gnupg lsb-release \
    nodejs npm git && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Create a venv in the container
ENV VIRTUAL_ENV=/opt/venv
RUN python -m venv $VIRTUAL_ENV
ENV PATH="$VIRTUAL_ENV/bin:$PATH"

# Skip copying files in build; we mount the repo in docker-compose to allow live edits

# Install base requirements (cache initially if available)
# We'll re-run `pip install -r requirements.txt` in the compose run command in case sources change.

# Create a non-root user for the app
RUN useradd -ms /bin/bash appuser
USER appuser

ENV IS_DOCKER=1

# Provide defaults but allow override
EXPOSE 8000

CMD ["sh", "-c", "pip install --upgrade pip && pip install -r requirements.txt && python manage.py migrate && python manage.py runserver 0.0.0.0:8000"]
